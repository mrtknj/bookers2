<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100,100) %>
            <p>
            <%= @user.name %>
            </p>
            <% end %>
            </td>
            <td>
            <%= link_to book_path(@booka.id) do %>
            <%= @booka.title %>
            <% end %>
            </td>
            <td>
            <%= @booka.body %>
            </td>
            <% if @user.id == current_user.id %>
            <td>
            <%= link_to edit_book_path(@booka.id) do %>
            <%= submit_tag 'Edit', class:"btn btn-success" %>
            <% end %>
            </td>
            <td>
            <%= link_to book_path(@booka.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
            <%= submit_tag 'Destroy', class:"btn btn-danger" %>
            <% end %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>